use_frameworks!
inhibit_all_warnings!

def common_pods
    pod 'RandomKit', :git => 'https://github.com/nvzqz/RandomKit.git'
end

target 'RandomDistributionKit' do
    common_pods
end

target 'RandomDistributionKitMacOS' do
    common_pods
end

target 'RandomDistributionKitTVOS' do
    common_pods
end

target 'RandomDistributionKitTests' do
    common_pods
end
